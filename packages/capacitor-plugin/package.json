{
  "name": "@vetcalculators/capacitor-watch",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Enhanced Capacitor Watch plugin with bidirectional messaging support for Apple Watch communication",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "CapacitorWatch.podspec",
    "CapWatch-Watch-SPM"
  ],
  "author": "VetCalculators (forked from Ionic Team)",
  "repository": {
    "type": "git",
    "url": "https://github.com/macsupport/CapacitorWatchEnhanced.git"
  },
  "bugs": {
    "url": "https://github.com/macsupport/CapacitorWatchEnhanced/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "watch",
    "apple-watch",
    "watchos",
    "wearable",
    "watchconnectivity",
    "bidirectional",
    "messaging"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint . --ext ts && npm run prettier \"**/*.{css,html,ts,js,java}\" --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint . --ext ts --fix && npm run prettier \"**/*.{css,html,ts,js,java}\" --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint",
    "prettier": "prettier",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api WatchPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^5.1.1",
    "@capacitor/cli": "^5.1.1",
    "@capacitor/core": "^5.1.1",
    "@capacitor/docgen": "^0.2.2",
    "@capacitor/ios": "^5.1.1",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^3.1.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.44.0",
    "eslint-config-love": "^44.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-java": "~2.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^2.78.1",
    "swiftlint": "^1.0.2",
    "typescript": "~5.1.6"
  },
  "peerDependencies": {
    "@capacitor/core": "^5.0.0"
  },
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
